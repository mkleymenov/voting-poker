{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "es6"
    ],
    "outDir": "build/src",
    "rootDir": "src",
    "esModuleInterop": true,
    "strict": true,
    "module": "CommonJS",
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "src/**/*.test.ts"
  ]
}
