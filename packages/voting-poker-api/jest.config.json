{
  "testEnvironment": "node",
  "testMatch": [
    "**/src/**/*.test.[jt]s?(x)"
  ],
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/build/"
  ],
  "moduleFileExtensions": [
    "ts",
    "js"
  ],
  "transform": {
    "^.+\\.ts?$": "ts-jest"
  },
  "globals": {
    "ts-jest": {
      "diagnostics": false
    }
  }
}